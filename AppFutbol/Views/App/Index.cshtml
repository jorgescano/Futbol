@{
    ViewBag.Title = "Jugadores";
}

<div class="options-scroll p-3 fixed-top">
    <div id="option-full" onclick="viewManagement.index.showFullPlayerList()">Completo</div>
    <div id="option-goals" onclick="viewManagement.index.showStatPlayerList('Goals', 'GoalsAverage')">
        <i class="fas fa-futbol mr-1"></i>
        Goles
    </div>
    <div id="option-assists" onclick="viewManagement.index.showStatPlayerList('Assists', 'AssistsAverage')">
        <i class="fas fa-a mr-1"></i>
        Asistencias
    </div>
    <div id="option-mvps" onclick="viewManagement.index.showStatPlayerList('MVPs')">
        <i class="fas fa-star mr-1"></i>
        MVPs
    </div>
    <div id="option-wins" onclick="viewManagement.index.showStatPlayerList('Wins')">Victorias</div>
    <div id="option-defeats" onclick="viewManagement.index.showStatPlayerList('Defeats')">Derrotas</div>
</div>

<div id="body-players">
    <div id="card-players" class="card-deck d-block w-100 px-3 pb-2"></div>
</div>

<script src="~/Scripts/app/index.js" type="text/javascript"></script>
<script type="text/javascript">
    document.addEventListener("load", (evt) => {
        viewManagement.common.readDataBase(viewManagement.index.showFullPlayerList);
    });
</script>